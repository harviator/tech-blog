{{#each posts as |post|}}
<div class="card">
    <div class="card-body d-flex flex-row justify-content-between">
        <p>{{post.title}}</p>
        <p>{{post.date}}</p>
    </div>
</div>
{{/each}}
<div class="d-grid gap-2">
    <button class="btn btn-lg btn-outline" id="new-post-btn" type="submit">+ New Post</button>
</div>
{{#each posts as |post|}}
<div class="card">
    <div class="card-body d-flex flex-row justify-content-between">
        <p>{{post.title}}</p>
        <p>{{post.date}}</p>
    </div>
</div>
{{/each}}

<a id="new-post-link" href="/post">+ New Post</a>


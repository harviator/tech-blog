<div class="card">
    <div class="card-header">
        <h5>Edit Post</h5>
    </div>
    <div class="card-body">
        <input type="hidden" id="post-id" value="{{userPostData.id}}">
        <div class="form-update-post">
            <form>
                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Title</label>
                    <input type="text" class="form-control" id="post-title" value="{{userPostData.title}}">
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Content</label>
                    <textarea class="form-control" id="post-content" rows="3">{{userPostData.content}}</textarea>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-lg btn-outline" id="update-post" type="submit">Update</button>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-lg btn-outline" id="delete-post" type="button">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/editpost.js"></script>